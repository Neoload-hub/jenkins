pipeline {
    agent any
    stages {
        stage('git repo & clean') {
            steps {
               sh "rmdir  /s /q Jenkins"
                sh "git clone https://github.com/Neoload-hub/jenkins.git"
                sh "mvn clean -f jenkins"
            }
        }
        stage('install') {
            steps {
                sh "mvn install -f Jenkins"
            }
        }
        stage('test') {
            steps {
                sh "mvn test -f Jenkins"
            }
        }
        stage('package') {
            steps {
                sh "mvn package -f Jenkins"
            }
        }
    }
}
